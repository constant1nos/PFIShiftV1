<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/SecondActInfoMsg"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="@string/Second_Activ_info_msg"
        android:textColor="?attr/actionMenuTextColor" />

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/promptShift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/Fragment_Choose_Shift_Text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/setSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/promptShift"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/promptDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Fragment_Choose_Date_Text"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/promptShift" />

        <TextView
            android:id="@+id/textFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/From"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/promptDate"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/buttonDate1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/Fragment_Pick_Date"
            app:layout_constraintLeft_toRightOf="@+id/textFrom"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/promptDate" />

        <TextView
            android:id="@+id/textTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/To"
            app:layout_constraintLeft_toRightOf="@+id/buttonDate1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/promptDate" />

        <Button
            android:id="@+id/buttonDate2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/Fragment_Pick_Date"
            app:layout_constraintLeft_toRightOf="@+id/textTo"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/promptDate" />

        <Button
            android:id="@+id/addFragmentButton"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:drawableLeft="@android:drawable/ic_input_add"
            android:text="@string/Fragment_Add_Button"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonDate1" />

        <Button
            android:id="@+id/doneFragmentButton"
            android:layout_width="135dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:drawableLeft="?android:attr/textCheckMarkInverse"
            android:text="@string/Fragment_done_Button"
            app:layout_constraintLeft_toRightOf="@+id/addFragmentButton"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonDate2" />

        <TextView
            android:id="@+id/settingsOutputText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="?attr/actionMenuTextColor"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/addFragmentButton"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/myFrag1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/myFrag2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/myFrag3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/myFrag4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/myFrag5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/myFrag6"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/myFrag7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/myFrag8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/myFrag9"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/myFrag10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>